<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/txtMaTHV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã thẻ hội viên"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtMaHV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã hội viên"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtTenHV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên hội viên"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtMaNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã nhân viên"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtTenNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên nhân viên"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtMaGoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã gói"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtTenGoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên gói"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ngày"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtTienThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tiền thuê"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hoàn Thành" />
    </LinearLayout>

</androidx.cardview.widget.CardView>